<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Enabled states -->

	<!-- Enabled, not focused. -->
    <item android:state_checked="true" android:state_window_focused="false"
          android:state_enabled="true" >
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_normal_holo_dark"/>
		   <item android:drawable="@drawable/scaled_off_white_arrow_down" /> 
          </layer-list>
    </item>
    <item android:state_checked="false" android:state_window_focused="false"
          android:state_enabled="true"
          >
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_normal_holo_dark"/>
		   <item android:drawable="@drawable/scaled_off_white_arrow_up" />
	       </layer-list>
    </item>

    <!-- Enabled, pressed. -->
    <item android:state_checked="true" android:state_pressed="true"
          android:state_enabled="true"
          android:drawable="@drawable/apptheme_btn_default_pressed_holo_dark" 
          >
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_pressed_holo_dark"/>
		   <item  android:drawable="@drawable/scaled_off_white_arrow_down"/> 
	       </layer-list>
    </item>
    <item android:state_checked="false" android:state_pressed="true"
          android:state_enabled="true"
          >
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_pressed_holo_dark"/>
		   <item android:drawable="@drawable/scaled_off_white_arrow_up" />
	       </layer-list>
    </item>

    <!-- Enabled, focused -->
    <item android:state_checked="true" android:state_focused="true"
          android:state_enabled="true" >
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_focused_holo_dark" />
		   <item android:drawable="@drawable/scaled_off_white_arrow_down" />
	       </layer-list>
    </item>
    <item android:state_checked="false" android:state_focused="true"
          android:state_enabled="true"
          >
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_focused_holo_dark" />
		   <item android:drawable="@drawable/scaled_off_white_arrow_up" />
	       </layer-list>
    </item>

    <!-- Enabled, Default -->
    <item android:state_checked="false"
          android:state_enabled="true" >
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_normal_holo_dark" />
		   <item android:drawable="@drawable/scaled_off_white_arrow_up" />
	       </layer-list>
    </item>      
    <item android:state_checked="true"
          android:state_enabled="true"
          > 
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_normal_holo_dark" />
		   <item android:drawable="@drawable/scaled_off_white_arrow_down" />
	       </layer-list>
    </item>


    <!-- Disabled states -->

	<item 	android:state_checked="false" android:state_focused="true" 
	    	android:state_enabled="false" >
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_disabled_focused_holo_dark"/>
		   <item android:drawable="@drawable/scaled_off_white_arrow_up" /> 
          </layer-list>
    </item>
 	<item 	android:state_checked="true" android:state_focused="true" 
 	    	android:state_enabled="false" >
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_disabled_focused_holo_dark"/>
		   <item android:drawable="@drawable/scaled_off_white_arrow_down" /> 
          </layer-list>
    </item>
 	
 	<item 	android:state_checked="false" android:state_enabled="false"
        	>
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_disabled_holo_dark"/>
		   <item android:drawable="@drawable/scaled_off_white_arrow_up" /> 
          </layer-list>
    </item>
    <item 	android:state_checked="true" android:state_enabled="false"
        	>
          <layer-list >
               <!-- The background -->		   
		   <item android:drawable="@drawable/apptheme_btn_default_disabled_holo_dark"/>
		   <item android:drawable="@drawable/scaled_off_white_arrow_down" /> 
          </layer-list>
    </item>
    
</selector>
